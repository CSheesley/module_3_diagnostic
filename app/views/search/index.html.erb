<h1>Search Results!</h1>
 <%# add query in results section %>

<h4>All Stations</h4>
<section class="all_stations">

<% facade.all_stations.each do |station| %>
    <ul class ="station">
      <li>Name: <%= station.name %></li>
      <li>Address: <%= station.address %></li>
      <li>Fuel Types: <%= station.fuel_type %></li>
      <li>Distance: <%= station.distance %></li>
      <li>Access Times: <%= station.access_times %></li>
    </ul>
    <% end %>
</section>


<h4>Closest Stations</h4>
<section class="closest_stations">
<% facade.closest_stations(15).each do |station| %>
    <ul class ="close_station">
      <li>Name: <%= station.name %></li>
      <li>Address: <%= station.address %></li>
      <li>Fuel Types: <%= station.fuel_type %></li>
      <li>Distance: <%= station.distance %></li>
      <li>Access Times: <%= station.access_times %></li>
    </ul>
    <% end %>
</section>
